[user]
	name = Michael Friedrich
	email = mfriedrich@gitlab.com
	signingkey = /Users/mfriedrich/.ssh/id_ed25519_mfriedrich

[includeIf "gitdir:~/dev/private/"]
    path = ~/.gitconfig-private

[alias]
        l  = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --
	pushu = push -u origin HEAD
[credential]
	helper = osxkeychain
[init]
	defaultBranch = main
[pull]
	rebase = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[push]
	autoSetupRemote = true
[gpg]
	format = ssh
[commit]
	gpgsign = true
[gpg "ssh"]
	allowedSignersFile = /Users/mfriedrich/.ssh/allowed_signers
[safe]
	directory = /Users/mfriedrich/dev/work/handbook/handbook
[core]
#	hooksPath = /Users/mfriedrich/.gitlab-gitleaks/hooks
